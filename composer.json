{
    "name": "ihxnnxs/umbra-ui",
    "description": "Modern UI components library for Laravel applications",
    "keywords": [
        "UmbraUI",
        "laravel",
        "umbra-ui",
        "ui-components"
    ],
    "homepage": "https://github.com/ihxnnxs/UmbraUI",
    "license": "MIT",
    "authors": [
        {
            "name": "ihxnnxs",
            "email": "jan555666@yandex.ru",
            "role": "Owner"
        }
    ],
    "require": {
        "php": "^8.4",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Ihxnnxs\\UmbraUI\\": "src/",
            "Ihxnnxs\\UmbraUI\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ihxnnxs\\UmbraUI\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ihxnnxs\\UmbraUI\\UmbraUIServiceProvider"
            ],
            "aliases": {
                "UmbraUI": "Ihxnnxs\\UmbraUI\\Facades\\UmbraUI"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
